<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Mountains</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <style>
    body {
      background: #fff;
      padding: 20px;
      line-height: 1.6;
    }

    h1 {
      font-size: 2rem;
      border-bottom: 2px solid black;
      display: inline-block;
      margin-bottom: 20px;
    }

    .mountain {
      border: 2px solid #000;
      padding: 10px;
      margin-bottom: 20px;
    }

    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      cursor: pointer;
      font-weight: bold;
    }

    .info-button {
      font-size: 0.9rem;
      background: #eee;
      padding: 2px 6px;
      border: 1px solid #000;
    }

    .arrow {
      font-size: 1.2rem;
      margin-left: 10px;
    }

    .lifts {
      margin-top: 10px;
      display: none;
    }

    .basic-info-row {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
      margin-bottom: 5px;
    }

    .basic-info-row span:first-child {
      font-weight: 600;
      min-width: 100px;
    }

    .basic-info-row span:last-child {
      flex: 1;
    }



    .mountain.open .lifts {
      display: block;
    }
    
  </style>
</head>
<body>
{{> nav}}

  <h1>Mountains</h1>

{{#each trails}}
  <div class="mountain" id="{{name}}">
    <div class="header">
      <span>{{name}}</span>
      <span>
        <a href="/{{dashify name}}" class="info-button btn btn-primary">More Info</a>
        <span class="arrow" onclick="toggleMountain('{{name}}')">▼</span>
      </span>
    </div>
    <div class="lifts">
      <div class="basic-info-row">
        <span>Rating:</span>
        <span>{{avg_rating}} ★★★★★</span>
      </div>
      <div class="basic-info-row">
        <span>Location:</span>
        <span><a href="{{location}}" target="_blank">{{location}}</a></span>
      </div>
      <div class="basic-info-row">
        <span>Description:</span>
        <span>{{description}}</span>
      </div>
    </div>
  </div>
{{/each}}


  <script>
    function toggleMountain(id) {
      const el = document.getElementById(id);
      el.classList.toggle('open');
      const arrow = el.querySelector('.arrow');
      arrow.textContent = el.classList.contains('open') ? '▲' : '▼';
    }
  </script>
</body>
</html>
